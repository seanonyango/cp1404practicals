BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            font_size: 45
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_change(miles_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_change(miles_input.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(miles_input.text)
    Label:
        id: output_label
        text: app.km_value
        font_size: 48
        color: (1, 1, 0, 1)